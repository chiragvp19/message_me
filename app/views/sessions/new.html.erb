<div class="form-body">
<h1 style="font-size: 50px; padding: 25px;">Log in</h1>
  <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
    <div >
      <%= f.label :username, class:"field-name" %>
      <div>
        <%= f.text_field :username, class: "field", placeholder: "Username" %>
      </div>
    </div>
    <br>
    <div>
      <%= f.label :password, class:"field-name" %>
      <div> 
        <%= f.password_field :password, class: "field", placeholder: "Password" %>
      </div>
    </div>

    <div>
      <%= f.submit "Log in", class: "btn-submit"%>
    </div>
  <% end %>
</div>